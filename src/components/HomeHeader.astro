---
import ThemeToggle from "@/components/ThemeToggle.astro";
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";
---

<header class="bg-muted w-full min-h-14 flex items-center px-4 fixed top-0 z-10">
  <h1 class="flex-1 text-2xl">
    <a href="/">{SITE.title}</a>
  </h1>
  <div class="grid items-center grid-cols-2 gap-4">
    <LinkButton class="posts text-center font-medium hover:text-skin-accent hover:underline underline-offset-4 decoration-dashed animate-shake" href="/posts">Blogs</LinkButton>
    <ThemeToggle />
  </div>
</header>
