---
import Layout from "@layouts/Layout.astro";
import ThemeToggle from "@components/ThemeToggle";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import AboutMe from "@components/AboutMe.astro";
import Projects from "@components/Projects.astro";
import ContactMe from "@components/ContactMe.astro";
import Screen from "@components/Screen.astro";
import {SITE} from "@config"

import "@styles/animate.css";
---

<Layout>
  <header>
    <h1>
      <a href="/">{SITE.title}</a>
    </h1>
    <div class="grid items-center grid-cols-2 gap-4">
      <LinkButton className="posts" href="/posts">Blogs</LinkButton>
      <ThemeToggle client:load />
    </div>
  </header>
  <Screen />

  <main class="space-y-10 pt-10">
    <AboutMe />
    <Projects />
    <ContactMe />
  </main>
  <Footer />

  <style>
    header {
      @apply bg-skin-card w-full h-14 flex items-center px-4 sticky top-0 z-10 -mb-12 sm:-mb-14;
    }

    header .posts {
      @apply text-center font-medium hover:text-skin-accent hover:underline underline-offset-4 decoration-dashed animate-shake;
    }

    h1 {
      @apply flex-1 text-2xl;
    }
  </style>
</Layout>
